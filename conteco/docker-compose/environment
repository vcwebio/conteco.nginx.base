#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export CONTECO_DC_GLOBAL_STACKS="nginx.base"
export CONTECO_DC_GLOBAL_STACKNAMES="nginx"
export CONTECO_DC_GLOBAL_BOOTSTACKS="nginx"
export CONTECO_DC_GLOBAL_RUNSTACKS=""
export CONTECO_DC_GLOBAL_VOLUME_LIST=
export CONTECO_DC_GLOBAL='$CONTECO_DC_GLOBAL_SERVICE_NAME,$CONTECO_DC_GLOBAL_IMAGE_NAME,$CONTECO_DC_NGINX_ENVIRONMENT,$CONTECO_DC_NGINX_COMMAND,$CONTECO_DC_NGINX_PORTS,$CONTECO_DC_NGINX_NETWORKS,$CONTECO_DC_NGINX_DEPLOY_MODE,$CONTECO_DC_GLOBAL_NETWORKS'
# END CONFIGURATION

# START GLOBAL SETTINGS
export CONTECO_DC_GLOBAL_SERVICE_NAME="${CONTECO_TYPE}"
export CONTECO_DC_GLOBAL_IMAGE_NAME="${CONTECO_TYPE}.${CONTECO_NAME}:${CONTECO_TAG}"
export CONTECO_DC_NGINX_ENVIRONMENT=
export CONTECO_DC_NGINX_COMMAND=
export CONTECO_DC_NGINX_NETWORKS="${DOLLAR}{CONTECO_ECOSYSTEM_RUNTIME}_overlay, ${DOLLAR}{CONTECO_TYPE}_overlay"
export CONTECO_DC_NGINX_DEPLOY_MODE="replicated"
export CONTECO_DC_GLOBAL_NETWORKS="${DOLLAR}{CONTECO_ECOSYSTEM_RUNTIME}_overlay: { external: true }, ${DOLLAR}{CONTECO_TYPE}_overlay: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS nginx.base
export CONTECO_DC_NGINX_PORTS="81:80"
export CONTECO_DC_NGINX_VOLUMES=
export CONTECO_DC_NGINX_DEPLOY_LABELS="traefik.enable=true, traefik.http.services.${CONTECO_TYPE}_${CONTECO_NAME}_${CONTECO_TYPE}.loadbalancer.server.port=80, traefik.http.routers.${CONTECO_TYPE}_${CONTECO_NAME}_${CONTECO_TYPE}.entrypoints=conteco, traefik.http.routers.${CONTECO_TYPE}_${CONTECO_NAME}_${CONTECO_TYPE}.rule=PathPrefix(\"/conteco\")"
export CONTECO_DC_NGINX_DEPLOY_LABELS=
export CONTECO_DC_NGINX_DEPLOY_RESOURCES_LIMITS_CPUS=
export CONTECO_DC_NGINX_DEPLOY_RESOURCES_RESERVATIONS_CPUS="0.1"
export CONTECO_DC_NGINX_DEPLOY_RESOURCES_LIMITS_MEMORY="64m"
export CONTECO_DC_NGINX_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="16m"
# END SETTINGS nginx.base

# START TOPLEVEL SETTINGS
export CONTECO_DC_GLOBAL_VOLUMES=
# END TOPLEVEL SETTINGS
